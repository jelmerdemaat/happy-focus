{
  "name": "happy-focus",
  "version": "0.3.0",
  "description": "Make browsers responsibly lose focus when the user is clicking inputs",
  "main": "build/happy-focus.js",
  "umd:main": "build/happy-focus.umd.js",
  "module": "build/happy-focus.m.js",
  "source": "src/index.js",
  "scripts": {
    "build": "npm run prettier && microbundle -i src -o build --sourcemap false && npm run docs",
    "docs": "cp build/happy-focus.umd.js docs/happy-focus.umd.js",
    "serve": "http-server ./docs -g",
    "prettier": "prettier --single-quote --write src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jelmerdemaat/happy-focus.git"
  },
  "keywords": [
    "focus",
    "click",
    "happy",
    "blur",
    "outline",
    "css",
    "accessibility"
  ],
  "author": "Jelmer de Maat <post@jelmerdemaat.nl> (https://github.com/jelmerdemaat)",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/jelmerdemaat/happy-focus/issues"
  },
  "homepage": "https://github.com/jelmerdemaat/happy-focus#readme",
  "devDependencies": {
    "http-server": "^0.10.0",
    "microbundle": "^0.4.4",
    "prettier": "^1.3.1"
  }
}

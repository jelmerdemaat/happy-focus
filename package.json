{
  "name": "happy-focus",
  "version": "0.1.5",
  "description": "Make browsers responsibly lose focus when the user is clicking inputs",
  "main": "dist/happyfocus.js",
  "files": [
    "dist/happyfocus.js",
    "dist/happyfocus.min.js"
  ],
  "scripts": {
    "dev": "babel --presets=env src/index.js --out-file dist/happyfocus.js --source-maps",
    "watch": "babel --watch --presets=env src/index.js --out-file dist/happyfocus.js --source-maps",
    "build": "npm run prettier && npm run dev && npm run uglify && npm run gzip && npm run docs",
    "docs": "cp dist/happyfocus.min.js docs/happyfocus.min.js",
    "gzip": "gzip -9c dist/happyfocus.min.js > dist/happyfocus.min.js.gz",
    "uglify": "uglifyjs dist/happyfocus.js -o dist/happyfocus.min.js",
    "uglify-pp": "uglifyjs dist/happyfocus.prepack.js -o dist/happyfocus.min.js",
    "prepack": "prepack dist/happyfocus.js  --out dist/happyfocus.prepack.js",
    "prepack-rm": "rm dist/happyfocus.prepack.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "http-server -g",
    "serve-docs": "http-server ./docs -g",
    "prettier": "prettier --single-quote --write src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jelmerdemaat/happy-focus.git"
  },
  "keywords": [
    "focus",
    "click",
    "happy",
    "blur"
  ],
  "author": "Jelmer de Maat <post@jelmerdemaat.nl> (https://github.com/jelmerdemaat)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jelmerdemaat/happy-focus/issues"
  },
  "homepage": "https://github.com/jelmerdemaat/happy-focus#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "http-server": "^0.10.0",
    "prepack": "^0.2.1",
    "prettier": "^1.3.1",
    "uglify-js": "^3.0.3"
  }
}

{
  "name": "happy-focus",
  "version": "0.2.1",
  "description": "Make browsers responsibly lose focus when the user is clicking inputs",
  "main": "src/happyfocus.js",
  "files": [
    "src/happyfocus.js",
    "dist/happyfocus.min.js"
  ],
  "scripts": {
    "build": "npm run prettier && npm run uglify && npm run docs",
    "docs": "cp dist/happyfocus.min.js docs/happyfocus.min.js",
    "uglify": "uglifyjs src/happyfocus.js -o dist/happyfocus.min.js --compress --mangle toplevel",
    "prepack": "echo \"Error: does not work yet\" && exit 1 # prepack src/happyfocus.js --out dist/happyfocus.prepack.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "http-server -g",
    "serve-docs": "http-server ./docs -g",
    "prettier": "prettier --single-quote --write src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jelmerdemaat/happy-focus.git"
  },
  "keywords": [
    "focus",
    "click",
    "happy",
    "blur",
    "outline",
    "css",
    "accessibility"
  ],
  "author": "Jelmer de Maat <post@jelmerdemaat.nl> (https://github.com/jelmerdemaat)",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/jelmerdemaat/happy-focus/issues"
  },
  "homepage": "https://github.com/jelmerdemaat/happy-focus#readme",
  "devDependencies": {
    "http-server": "^0.10.0",
    "prepack": "^0.2.1",
    "prettier": "^1.3.1",
    "uglify-js": "^3.0.3"
  }
}
